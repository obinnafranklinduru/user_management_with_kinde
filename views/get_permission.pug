extends layouts/main-layout.pug

block content

    header
        nav.nav.container
            a.btn.btn-light(href='/helper-functions') Back
            .profile-blob
                if !!user.picture
                    .avatar #{user.picture}
                else
                    .avatar #{user.given_name[0]}#{user.given_name[1]}
                div
                    p.text-heading-2 #{user.given_name} #{user.family_name}
                    a.text-subtle(href='/logout') Sign out
    main
      .container
        .card.start-hero-small
          p.text-body-2
            | Get permission
        br
        form(action="/get-permission" method="POST")
            div.input-container
                label(for="permission") Permission:
                input(type="text", name="permission", value=permission, required)
            p.buttons
                input(type="submit", value="Show Result")
            if !!inputGetPermission
                p.result Input: #{inputGetPermission}
            if !!resultGetPermission
                .alert-success
                    p.result Result: #{resultGetPermission}
            if !!errorGetPermission
                .alert-danger
                    p.error Error: #{errorGetPermission}