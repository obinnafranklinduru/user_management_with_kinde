extends layouts/main-layout.pug

block content

    header
        nav.nav.container
            a.btn.btn-light(href='/helper-functions') Back
            .profile-blob
                if !!user.picture
                    .avatar #{user.picture}
                else
                    .avatar #{user.given_name[0]}#{user.given_name[1]}
                div
                    p.text-heading-2 #{user.given_name} #{user.family_name}
                    a.text-subtle(href='/logout') Sign out
    main
      .container
        .card.start-hero-small
          p.text-body-2
            | Get token
        p.text-body-2.next-steps-section
        h4 Access token:
        pre.code.text-body-3
            p #{resultGetToken}
