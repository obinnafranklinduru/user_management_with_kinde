extends layouts/main-layout.pug

block content

    header
        nav.nav.container
            h1.text-display-3 KindeAuth
            .profile-blob
                if !!user.picture
                    .avatar #{user.picture}
                else
                    .avatar #{user.given_name[0]}#{user.given_name[1]}
                div
                    p.text-heading-2 #{user.given_name} #{user.family_name}
                    a.text-subtle(href='/logout') Sign out
    main
        .container
            .card.start-hero
                p.text-body-2.start-hero-intro Woohoo!
                p.text-display-2 Your authentication is all sorted.
                a.btn.btn-light(href='/helper-functions') Test Helper Function
                a.btn.btn-light.m-1(href='/user-detail') User details
                        
            section.next-steps-section
                h2.text-heading-1 Next steps for you
